#include<iostream>
using namespace std;

	class Rectangle
	{
	private:
		double length,width;
	public:
		Rectangle();
		Rectangle(double l,double w);
		double getLength();
		double getWidth();
		void setLength(double l);
		void setWidth(double w);
		double getArea();
		double getParameter();
		void print();
	};
	Rectangle::Rectangle()
	{
		setLength(1.0);
		setWidth(1.0);
	}
	Rectangle::Rectangle(double l,double w)
	{
		length = l;
		width = w;
	}
	double Rectangle::getLength(){
		return length;
	}
	double Rectangle::getWidth(){
		return width;
	}
	void Rectangle::setLength(double l){
		length = l;
	}
	void Rectangle::setWidth(double w){
		width = w;
	}
	double Rectangle::getArea(){
		return length*width;
	}
	double Rectangle::getParameter(){
		return (length+width)*2;
	}
	void Rectangle::print(){
		cout<<"\tThe length is "<<length<<endl;
		cout<<"\tThe width is "<<width<<endl;
		cout<<"\tThe area is "<<getArea()<<endl;
		cout<<"\tThe parameter is "<<getParameter()<<endl;
	} 

	int main()
	{
		Rectangle P1,P2(0.5,0.5);
		cout<<"Rec1:"<<endl;
		P1.print();
		cout<<endl;
		cout<<"Rec2:"<<endl;
		P2.print();
		cout<<endl;
		if(P1.getArea()>P2.getArea()) cout<<"Rec1 has bigger area."<<endl;
		else if(P1.getArea()<P2.getArea()) cout<<"Rec2 has bigger area."<<endl;
		else cout<<"Rec1&2 has the same area."<<endl;
	}
